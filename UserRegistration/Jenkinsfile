pipeline {
    agent any
    tools{
        maven 'Maven'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/jsanthoshkiran/gnitcsedevops.git'
            }
        }
        
        stage('Build') {
            steps {
                script {
                    echo 'Building the project...'
                }
            }
        }

        stage("Maven Build"){
            steps{
                bat 'mvn clean package'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the project...'
                    sh '''
                        # Define variables
                        #SERVER_USER=user
                        #SERVER_IP=localhost
                        WEB_ROOT="//E//nginx-1.26.2//html//"

                        # Copy the index.html to the Nginx web root directories
                        cp -f UserReg.html ${WEB_ROOT}
                    '''
            }
        }
    }
}
