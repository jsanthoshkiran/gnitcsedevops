pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'mdev', url: 'https://github.com/jsanthoshkiran/gnitcsedevops.git'
            }
        }
        
        stage('Check Current Directory') {

            steps {

                powershell """
                   pwd
                """

            }
        }

        stage('Build') {
            steps {
                script {
                    echo 'Building the project...'
                }
            }
        }

        stage('Deploy to Nginx') {
            steps {
                script {
                    echo 'Deploying the project...'
                    powershell """
                    def sourceDir = Set-Location
                    def targetDir = "E:/nginx-1.26.2/html/" 
                    if (Test-Path -Path $targetDir) {
                      Copy-Item -Path "$sourceDir/UserReg.html" -Destination "$targetDir" -Force
                    }
                    """
                }
            }
        }
    }
}
